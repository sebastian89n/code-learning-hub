<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Some basic sample for Spring xml context bean definitions -->

    <!-- prototype scope example, new bean will be created for each place where it is injected -->
    <bean id="messageContainerBean"
          class="com.bastex.codelearninghub.spring.context.xml.beans.MessageContainerBean" scope="prototype">
        <constructor-arg index="0" value="END MESSAGE"/>
    </bean>

    <!-- name is same as id, but it can contain multiple aliases comma,semicolon or whitespace separated -->
    <bean name="i18nService,i18nEnService"
          class="com.bastex.codelearninghub.spring.context.xml.services.I18nEnServiceImpl"/>

    <bean id="xmlBeanService"
          class="com.bastex.codelearninghub.spring.context.xml.services.XmlTranslationServiceImpl">
        <constructor-arg name="version" value="0.1-ALPHA"/>
        <constructor-arg name="messageContainerBean" ref="messageContainerBean"/>
        <constructor-arg name="textToTranslate">
            <list>
                <value>foo</value>
                <value>bar</value>
            </list>
        </constructor-arg>
        <property name="executionCount" value="0"/>
        <property name="translationServices">
            <list>
                <ref bean="i18nService"/> <!-- referencing existing bean -->
                <bean class="com.bastex.codelearninghub.spring.context.xml.services.I18nEsServiceImpl"/> <!-- creating bean -->
            </list>
        </property>
    </bean>
</beans>